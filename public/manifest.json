{
  "manifest_version": 3,
  "name": "Web Distiller AI",
  "version": "0.9",
  "description": "Summarizes and Translates web pages using Gemini Nano in Chrome",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html",
    "default_height": 600,
    "default_width": 400
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
